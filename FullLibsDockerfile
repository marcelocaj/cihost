RUN wget http://libsdl.org/projects/SDL_ttf/release/SDL2_ttf-2.0.12.tar.gz && \
       tar xvzf SDL2_ttf-2.0.12.tar.gz && \
       cd SDL2_ttf-2.0.12 && \
       ./configure --disable-shared --enable-static --with-freetype-prefix=${LIBS_PREFIX} && \
       make -j5 && \
       make install

