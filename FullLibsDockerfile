RUN wget http://www.ferzkopp.net/Software/SDL2_gfx/SDL2_gfx-1.0.0.tar.gz && \
	tar xvzf SDL2_gfx-1.0.0.tar.gz && \
	cd SDL2_gfx-1.0.0 && \
	./configure --prefix=${LIBS_PREFIX} --disable-shared --enable-static --disable-sdltest --disable-mmx && \
	make -j5 && \
	make install



